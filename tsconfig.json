{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@layouts/*": ["src/layouts/*"],
      "@components/*": ["src/components/*"],
      "@styles/*": ["src/styles/*"],
      "@js/*": ["src/js/*"]
    },
    "allowJs": true,
    "checkJs": false,
    "noEmit": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "strict": false
  },
  "include": ["src/**/*.ts", "src/**/*.js", "src/**/*.astro"],
  "exclude": ["node_modules"]
}
