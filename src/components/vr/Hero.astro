---
import AdvantagesHero from './AdvantagesHero.astro';
---
<section class="hero" id="home">
    <div class="_container">
        <div class="hero__content">
            <div class="hero__info">
                <div class="hero__text">
                    <h1>Immerse Yourself in Virtual Reality</h1>
                    <p>Experience Unforgettable Events in VR. Bring your events to life like never before with our VR services</p>
                    <a class="main-button" href="#">Discover more</a>
                </div>
                <div class="hero__bottom">
                    <div class="hero__clients">
                        <ul>
                            <li>
                                <img class="lazyload" data-src="/vr/images/hero/01.png" alt="Client 1" />
                                <noscript>
                                    <img src="/vr/images/hero/01.png" alt="Client 1" />
                                </noscript>
                            </li>
                            <li>
                                <img class="lazyload" data-src="/vr/images/hero/02.png" alt="Client 1" />
                                <noscript>
                                    <img src="/vr/images/hero/02.png" alt="Client 1" />
                                </noscript>
                            </li>
                            <li>
                                <img class="lazyload" data-src="/vr/images/hero/03.png" alt="Client 1" />
                                <noscript>
                                    <img src="/vr/images/hero/02.png" alt="Client 1" />
                                </noscript>
                            </li>
                        </ul>
                        <div><span>32k+</span> Happy Client</div>
                    </div>
                    <div class="hero__video">
                        <div>
                            <img class="lazyload" data-src="/vr/images/hero/video.png" alt="Video">
                            <noscript>
                                <img src="/vr/images/hero/video.png" alt="Video">
                            </noscript>
                        </div>
                    </div>
                </div>
            </div>
            <div class="hero__image">
                <img class="lazyload" data-src="/vr/images/hero/hero_image.png" alt="Hero image">
                <noscript>
                    <img src="/vr/images/hero/hero_image.png" alt="Hero image">
                </noscript>
            </div>
        </div>
        <AdvantagesHero />
    </div>
</section>
<style lang="scss">
    .hero {
        position: relative;
        padding-top: 127px;
        overflow: hidden;
        &::before {
            content: '';
            position: absolute;
            top: 0;
            right: 0;
            width: 736px;
            height: 353.2px;
            background: url('/vr/images/hero/before.svg');
        }
        &::after {
            content: '';
            position: absolute;
            top: 284px;
            left: 0;
            width: 1100px;
            height: 721px;
            background: url('/vr/images/hero/after.svg');
        }
		// .hero__content
		&__content {
            position: relative;
            z-index: 1;
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 40px;
		}
		// .hero__info
		&__info {
            display: flex;
            flex-direction: column;
            gap: 40px;
		}
		// .hero__text
		&__text {
            h1 {
                max-width: 540px;
                margin-bottom: 12px;
            }
            p {
                max-width: 446px;
                margin-bottom: 32px;
            }
		}
		// .hero__bottom
		&__bottom {
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 42px;
		}
		// .hero__clients
		&__clients {
            display: flex;
            align-items: center;
            gap: 30px;
            ul {
                display: flex;
                li {
                    width: 50.45px;
                    height: 50.45px;
                    margin-right: -12px;
                    border: 1px solid var(--colorBlack_100);
                    border-radius: 50%;
                    img {
                        border-radius: 50%;
                    }
                }
            }
            div {
                span {
                    position: relative;
                    color: var(--colorWhite);
                    font-weight: 600;
                    &::before {
                        content: '';
                        position: absolute;
                        bottom: -2.25px;
                        right: 50%;
                        width: 47.7px;
                        height: 7px;
                        background: url('/vr/images/hero/span.svg');
                        transform: translateX(50%);
                    }
                }
            }
		}
		// .hero__video
		&__video {
            position: relative;
            display: flex;
            align-items: flex-end;
            justify-content: center;
            width: 196px;
            height: 127.94px;
            background-color: #21232E;
            overflow: hidden;
            cursor: pointer;
            &::before {
                content: '';
                position: absolute;
                top: 50%;
                right: 50%;
                z-index: 1;
                width: 28px;
                height: 28px;
                background: url('/vr/images/hero/play.svg') center no-repeat;
                border: 1.17px solid var(--colorWhite);
                border-radius: 50%;
                transform: translate(50%, -50%);
                transition: transform .3s ease 0s;
            }
            div {
                transition: transform .6s ease 0s;
            }
            &:hover {
                &::before {
                    transform: translate(50%, -50%) scale(1.3);
                }
                div {
                    transform: scale(1.1);
                }
            }
		}
		// .hero__image
		&__image {
            position: relative;
            &::before {
                content: '';
                position: absolute;
                bottom: 17%;
                left: 0;
                z-index: -2;
                width: 100%;
                height: 300px;
                background: var(--bgBright);
                transform: rotate(-25deg);
                filter: blur(70px);
                opacity: .5;
            }
            &::after {
                content: '';
                position: absolute;
                top: 25%;
                left: 5%;
                z-index: -1;
                width: 300px;
                height: 300px;
                background: var(--colorLinear_2);
                filter: blur(70px);
                opacity: .4;
            }
		}
    }
</style>