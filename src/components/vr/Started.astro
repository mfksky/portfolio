---
const title = 'How to get started';
const heading = 'Bringing Your Virtual Reality Dreams to Life';
const badgeText = 'VR Service';
const bgImage = '/vr/images/started/bg.jpg';
---

<section class="started section">
    <div class="_container">
        <div class="started__content">
            <div class="started__text _scr-item _fade-up">
                <h4 class="h4-linear">{title}</h4>
                <h2>{heading}</h2>
            </div>
            <div class="started__video video-started _scr-item _fade-up" id="video-started" data-duration="1s" data-offset="100">
                <img class="video-started__image lazyload" data-src={bgImage} alt="Bg Image" />
                <noscript>
                    <img class="video-started__image" src={bgImage} alt="Bg Image" />
                </noscript>
                <div class="video-started__text">
                    <span>{badgeText}</span>
                    <div>{title}</div>
                </div>
                <span class="video-started__play"></span>
                <div class="video-started__controll">
                    <span class="video-started__controll-play"></span>
                    <span class="video-started__progress"></span>
                </div>
            </div>
            <div class="started__button main-button _scr-item _fade-up" data-duration="1s" data-offset="100">Get started</div>
        </div>
    </div>
</section>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const videoContainer = document.getElementById('video-started');
        const videoId = 'dQw4w9WgXcQ';

        videoContainer.addEventListener('click', () => {
            const iframe = document.createElement('iframe');
            iframe.src = `https://www.youtube.com/embed/${videoId}?autoplay=1`;
            
            iframe.width = videoContainer.offsetWidth.toString();
            iframe.height = videoContainer.offsetHeight.toString();;
            
            iframe.setAttribute('frameborder', '0');
            iframe.setAttribute('allowfullscreen', '');
            iframe.setAttribute('allow', 'autoplay; encrypted-media');

            videoContainer.innerHTML = '';
            videoContainer.appendChild(iframe);
            videoContainer.classList.remove('video-placeholder');
        });
    });
</script>
    

<style lang="scss">
    @import '../../styles/assets/vars';

    .started {
		// .started__content
		&__content {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 48px;
            @media (max-width:$md3+px){
                gap: 32px;
            }
		}
		// .started__text
		&__text {
            text-align: center;
            max-width: 800px;
		}
		// .started__video
		&__video {
		}
    }
    .video-started {
        position: relative;
        min-height: 254px;
        border-top-right-radius: 12px;
        border-top-left-radius: 12px;
        overflow: hidden;
        cursor: pointer;
        &:hover {
            .video-started__image {
                transform: scale(1.1);
            }
        }
		// .video-started__image
		&__image {
            object-fit: cover;
            min-height: 254px;
            border-top-right-radius: 12px;
            border-top-left-radius: 12px;
            transition: transform .6s ease;
		}
		// .video-started__text
		&__text {
            position: absolute;
            top: 42px;
            left: 32px;
            display: flex;
            flex-direction: column;
            align-items: flex-start;
            gap: 12px;
            color: var(--colorWhite);
            span {
                padding: 2px 10px;
                font-size: 14px;
                line-height: 20px;
                font-weight: 500;
                background-color: rgba(255,255,255,.3);
                border-radius: 16px;
            }
            div {
                font-size: 36px;
                line-height: 44px;
                letter-spacing: -2%;
                font-weight: 500;
            }
		}
		// .video-started__play
		&__play {
            position: absolute;
            top: 50%;
            left: 50%;
            width: 8.334%;
            height: 19.159%;
            background: url('/vr/icons/play.svg') center / contain no-repeat;
            transform: translate(-50%, -50%);
		}
		// .video-started__controll
		&__controll {
            position: absolute;
            bottom: 32px;
            left: 32px;
            right: 32px;
            display: flex;
            align-items: center;
            gap: 12px;
		}
        // .video-started__controll-play
		&__controll-play {
            width: 16px;
            height: 16px;
            background: url('/vr/images/hero/play.svg') center no-repeat;
		}
		// .video-started__progress
		&__progress {
            flex: 1;
            position: relative;
            height: 8px;
            background-color: rgba(255,255,255,.3);
            border-radius: 4px;
            &::before, &::after {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                height: 8px;
                background-color: var(--colorWhite);
                border-radius: 4px;
            }
            &::before {
                width: 8px;
            }
            &::after {
                width: 80px;
                opacity: .5;
            }
		}
        iframe {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            border: 0;
        }
    }
</style>