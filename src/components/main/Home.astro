---
const tagTitle = 'Главная';
const tagIcon = '/main/icons/icons.svg#home';
const subtext = 'Lorem ipsum dolor sit amet, consectetur adipiscing elit. Suspendisse varius enim in eros elementum tristique. Duis cursus, mi quis viverra ornare, eros dolor interdum nulla, ut commodo diam libero vitae erat.';
---

<section class="home">
    <div class="_container">
        <div class="home__content">
            <div class="home__text">
                <div class="home__badge">
                    <svg>
                        <use xlink:href={tagIcon}></use>
                        <title>{tagTitle}</title>
                    </svg>
                    <span>{tagTitle}</span>
                </div>
                <h1>Верстка сайтов 
и Frontend-разработка</h1>
                <p>{subtext}</p>
                <button class="home__scroll-btn" type="button">
                    <svg>
                        <use xlink:href="/main/icons/icons.svg#portfolio"></use>
                    </svg>
                    <div>Мои работы</div>
                </button>
            </div>
            <div class="home__rotating-btn">
                <img src="/main/images/scroll_more.svg" alt="">
                <svg>
                    <use xlink:href="/main/icons/icons.svg#arrow"></use>
                </svg>
            </div>
        </div>
    </div>
</section>

<style lang="scss">
    @import '../../styles/assets/vars';

    .home {
		// .home__content
		&__content {
            position: relative;
            display: flex;
            align-items: flex-end;
            height: 100vh;
            padding-bottom: 5%;
            @media (max-width: 1600px){
                padding-bottom: 3%;
            }
		}
		// .home__text
		&__text {
            display: flex;
            flex-direction: column;
            align-items: flex-start;
            h1 {
                margin-bottom: 3rem;
                font-size: 5rem;
                line-height: 5.2rem;
                font-weight: 700;
                max-width: 650px;
                text-transform: uppercase;
                white-space: pre;
            }
            p {
                max-width: 72rem;
                margin-bottom: 6rem;
                color: var(--fontColor2);
            }
		}
		// .home__badge
		&__badge {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 1rem;
            height: 3rem;
            margin-bottom: 3rem;
            padding: 0 1.2rem;
            font-size: 1.2rem;
            line-height: 1.2rem;
            font-weight: 500;
            letter-spacing: 1px;
            text-transform: uppercase;
            border: 1px solid var(--borderColor);
            border-radius: 1rem;
            svg {
                width: 10px;
                height: 10px;
                fill: var(--fontColor1);
            }
		}
		// .home__scroll-btn
		&__scroll-btn {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 1rem;
            height: 5rem;
            padding: 0 2rem;
            font-size: 1.3rem;
            line-height: 100%;
            font-weight: 600;
            letter-spacing: 1.5px;
            text-transform: uppercase;
            border: 1px solid var(--borderColor);
            border-radius: 1rem;
            transition: all .3s ease;
            svg {
                width: 1.8rem;
                height: 1.8rem;
                fill: var(--fontColor1);
            }
		}
		// .home__rotating-btn
		&__rotating-btn {
            position: absolute;
            bottom: 5%;
            right: 0;
            width: 15rem;
            height: 15rem;
            img {
                width: 15rem;
                height: 15rem;
            }
            svg {
                position: absolute;
                top: 50%;
                left: 50%;
                width: 3rem;
                height: 3rem;
                fill: var(--fontColor1);
                transform: translate(-50%, -50%);
            }
		}
    }

</style>