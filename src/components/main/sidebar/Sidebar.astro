---
import Logo from "./Logo.astro";
import Avatar from "./Avatar.astro";
import Info from "./Info.astro";
import ContactButton from "@components/main/ui/ContactButton.astro";
---

<div class="sidebar">
    <div class="sidebar__content">
        <Logo />
        <Avatar />
        <Info />
    </div>
    <ContactButton title='Связаться со мной' />
</div>

<style lang="scss">
    .sidebar {
        position: fixed;
        top: 50%;
        left: 6%;
        z-index: 1000;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        width: 40rem;
        height: calc(100vh - 10%);
        padding: 6rem;
        background-color: var(--bgColor2);
        border: 1px solid var(--borderColor);
        border-radius: 5rem;
        transform: translateY(-50%);
        @media (max-width: 1600px){
            left: 3%;
            width: 30rem;
            height: calc(100vh - 6%);
            padding: 3rem;
            border-radius: 2.5rem;
        }
        @media (max-width:$md2+px){
            position: relative;
            top: 0;
            left: 0;
            width: auto;
            height: auto;
            margin: 3rem 3rem 24rem 3rem;
            transform: translateY(0);
        }
        @media (max-width:$md3+px){
            margin: 1.5rem 1.5rem 12rem 1.5rem;
        }
        // .sidebar__content
        &__content {
            display: flex;
            flex-wrap: wrap;
            align-items: flex-start;
            justify-content: space-between;
            @media (max-width:$md2+px){
                margin-bottom: 6rem;
            }
            @media (max-width:$md3+px){
                margin-bottom: 4rem;
            }
        }
    }
</style>

<style lang="scss" is:global>
    .sidebar .btn-contact__btn {
        width: 100%;
    }
    .sidebar .btn-contact__content {
        top: auto;
        bottom: 6rem;
        transform: translateY(6.5rem);
        @media (max-width: 1600px){
            bottom: 5rem;
        }
        @media (max-width: $md5+px){
            bottom: 4rem;
            a {
                width: 4rem;
                height: 4rem;
            }
        }
    }
</style>