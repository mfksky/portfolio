<div class="gallery-popup swiper">
    <div class="gallery-popup__content swiper-wrapper" data-lightshop-gallery data-key="gallery"></div>
    <button class="gallery-popup__prev" type="button" data-gallery-prev>
        <svg>
            <use xlink:href="/main/icons/icons.svg#arrow_lightshop"></use>
        </svg>
    </button>
    <button class="gallery-popup__next" type="button" data-gallery-next>
        <svg>
            <use xlink:href="/main/icons/icons.svg#arrow_lightshop"></use>
        </svg>
    </button>
</div>

<style lang="scss">
    .gallery-popup {
        max-width: 50rem;
        padding-top: 4rem;
        @media (max-width:$md2+px){
            max-width: none;
            width: 100%;
        }
        &__content {
        }
        &__prev, &__next {
            position: absolute;
            top: 0;
            right: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            width: 3rem;
            height: 3rem;
            svg {
                width: 2.4rem;
                height: 2.4rem;
                fill: var(--fontColor2);
                transition: all .3s ease;
            }
            @include no-hover-touch {
                svg {
                    fill: var(--fontColor1);
                }
            }
        }
        &__prev {
            right: auto;
            left: 0;
            transform: rotate(180deg);
        }
    }
</style>

<style lang="scss" is:global>
    .gallery-popup__item {
        min-width: 11rem;
        min-height: 11rem;
        border-radius: 1rem;
        overflow: hidden;
        cursor: pointer;
    }
</style>