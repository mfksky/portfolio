---
import PopupHeader from './header/PopupHeader.astro';
import Content from './content/Content.astro';
---

<div class="popup" data-lightshop-popup>
    <div class="popup__wrapper">
        <div class="popup__body">
            <PopupHeader />
            <Content />
        </div>
    </div>
</div>

<script>
    import { initLightshop } from '@js/main/lightshop.js';

    initLightshop();
</script>

<style lang="scss">
    .popup {
        position: fixed;
        top: 0;
        left: 0;
        z-index: 10000;
        width: 100%;
        height: 100%;
        background: rgba(199, 198, 211, 0.19);
        backdrop-filter: blur(1rem);
        display: none;
        opacity: 0;
        overflow: hidden;
        &__wrapper {
            position: absolute;
            top: 50%;
            left: 50%;
            width: 100%;
            max-width: $md1+px;
            height: 100%;
            max-height: calc(100vh - 10rem);
            transform: translate(-50%, -50%);
            overflow: hidden;
            border-radius: 2rem;
            @media (max-width:$md2+px){
                max-height: none;
                padding-top: 2rem;
            }
            @media (max-width:$md3+px){
                padding-top: 0;
                border-radius: 0;
            }
        }
        &__body {
            display: flex;
            flex-direction: column;
            width: 100%;
            height: 100%;
            padding: 0 2rem;
            overflow: hidden;
            @media (max-width:$md3+px){
                padding: 0;
            }
        }
    }
</style>