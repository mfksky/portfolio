---
import { Picture } from 'astro:assets';

const { id, title, subtitle, mainImage, tags, additionTag } = Astro.props;
---

<div class="item-portfolio" data-lightshop-item-id={id} data-lightshop-button>
    <Picture 
        src={mainImage}
        class='item-portfolio__img'
        alt={title}
        title={title}
        width={512}
        height={512}
        formats={['avif', 'webp']}
        fallbackFormat='jpg'
    />
    <div class="item-portfolio__text">
        <h3>{title}</h3>
        <p>{subtitle}</p>
        <div class="item-portfolio__button">
            <span>Подробнее</span>
        </div>
    </div>
    <div class="item-portfolio__tags">
    {
        tags.map((tag) => (
            <div class="item-portfolio__tags-item">{tag}</div>
        ))
    }
    </div>
    {additionTag && (
        <div class="item-portfolio__addition-tag">{additionTag}</div>
    )}
</div>

<style lang="scss">
    .item-portfolio {
        position: relative;
        border-radius: 2rem;
        overflow: hidden;
        cursor: pointer;
        &::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            backdrop-filter: blur(2rem);
            opacity: 0;
            visibility: hidden;
            transition: all .3s ease;
            @media (max-width:$md3+px){
                display: none;
            }
        }
        @include no-hover-touch {
            &::before {
                visibility: visible;
                opacity: 1;
            }
            .item-portfolio__text {
                visibility: visible;
                opacity: 1;
            }
        }
		// .item-portfolio__img
		&__img {
            width: 100%;
		}
		// .item-portfolio__text
		&__text {
            position: absolute;
            top: 50%;
            left: 50%;
            width: 100%;
            padding: 0 4rem;
            transform: translate(-50%, -50%);
            opacity: 0;
            visibility: hidden;
            transition: all .3s ease;
            p {
                margin-bottom: 3rem;
                color: var(--fontColor2);
                font-size: 1.8rem;
                line-height: 2rem;
            }
            @media (max-width:$md1+px){
                p {
                    margin-bottom: 2rem;
                }
            }
            @media (max-width:$md3+px){
                display: none;
            }
		}
        // .item-portfolio__button
        &__button {
            position: relative;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 4rem;
            padding: 0 2rem;
            font-size: 1.3rem;
            line-height: 100%;
            font-weight: 600;
            letter-spacing: 1.5px;
            text-transform: uppercase;
            background-color: var(--accentColor1);
            border-radius: 1rem;
            overflow: hidden;
            cursor: pointer;
            &::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background-image: var(--gradient1);
                opacity: 0;
                transform: translateY(100%);
                transition: all .6s ease;
            }
            span {
                position: relative;
            }
            @include no-hover-touch {
                &::before {
                    transform: translate(0);
                    opacity: 1;
                }
            }
        }
		// .item-portfolio__tags
		&__tags {
            position: absolute;
            bottom: 0;
            left: 0;
            display: flex;
            flex-wrap: wrap;
            gap: 1rem;
            width: 100%;
            padding: 2rem;
            backdrop-filter: blur(5px);
            @media (max-width:$md1+px){
                padding: 1.5rem;
            }
            @media (max-width:$md3+px){
                gap: .5rem;
            }
		}
		// .item-portfolio__tags-item
		&__tags-item {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 3rem;
            padding: 0 1.2rem;
            color: var(--bgColor1);
            font-size: 1.2rem;
            line-height: 100%;
            font-weight: 500;
            letter-spacing: 1px;
            text-transform: uppercase;
            background-color: var(--fontColor2);
            border-radius: 1rem;
            @media (max-width:$md1+px){
                height: 2.5rem;
                padding: 0 1rem;
                font-size: 1rem;
            }
		}
		// .item-portfolio__addition-tag
		&__addition-tag {
            position: absolute;
            top: 2rem;
            right: 2rem;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 3rem;
            padding: 0 1.2rem;
            color: var(--fontColor1);
            font-size: 1.2rem;
            line-height: 1.2rem;
            font-weight: 500;
            letter-spacing: 1px;
            text-transform: uppercase;
            background-color: #b86b30;
            border-radius: 1rem;
            @media (max-width:$md1+px){
                top: 1.5rem;
                right: 1.5rem;
                height: 2.5rem;
                padding: 0 1rem;
                font-size: 1rem;
            }
		}
    }

</style>