<a class="rotating-btn" href="#portfolio">
    <img class="rotating-btn__image lazyload" data-src="/main/images/scroll_more.svg" alt="К портфолио" title="К портфолио">
    <noscript>
        <img class="rotating-btn__image" src="/main/images/scroll_more.svg" alt="К портфолио" title="К портфолио">
    </noscript>
    <svg class="rotating-btn__icon">
        <use xlink:href="/main/icons/icons.svg#arrow"></use>
        <title>Перейти к портфолио</title>
    </svg>
</a>

<style lang="scss">
    .rotating-btn {
        position: absolute;
        bottom: 5%;
        right: 0;
        transition: transform .6s ease;
        cursor: pointer;
        @include no-hover-touch {
            transform: scale(0.9);
        }
        // .rotating-btn__image
        &__image {
            width: 14rem;
            height: 14rem;
        }
        // .rotating-btn__icon
        &__icon {
            position: absolute;
            top: 50%;
            left: 50%;
            width: 3rem;
            height: 3rem;
            fill: var(--fontColor1);
            transform: translate(-50%, -50%);
        }
        @media (max-width: 1600px){
            bottom: 3%;
        }
        @media (max-width:$md1+px){
            &__image{
                width: 10rem;
                height: 10rem;
            }
        }
        @media (max-width:$md3+px){
            display: none;
        }
    }
</style>